[colors]
;background = ${xrdb:color0:#222}
background = #1d1f21
background-alt = #81a2be
foreground = #fff
foreground-unfocused = #878787
foreground-alt = #1d1f21
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
urgent = #cc6666

[bar/bspwm]
monitor = ${env:MONITOR:}
width = 100%
height = 18
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 2
border-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 2
module-margin-right = 2

font-0 = Font Awesome 5 Brands Regular:pixelsize=9;3
font-1 = Font Awesome 5 Free Regular:pixelsize=9;3
font-2 = Font Awesome 5 Free Solid:pixelsize=9;3
font-3 = DejaVu Sans:pixelsize=9;3

modules-left = bspwm-main
modules-center = xwindow
modules-right = wireless-network wired-network battery date

tray-position = right
tray-padding = 4
;tray-transparent = true
tray-background = ${colors.background}

override-redirect = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/bspwm-main]
inherit = bar/bspwm
modules-left = bspwm-main
monitor = ${env:MONITOR:}

[bar/bspwm-sec]
inherit = bar/bspwm
modules-left = bspwm-sec
monitor = ${env:MONITOR:}

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

